
@model EventosCliente.Models.EventoViewModel

<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Crear Evento</h5>
    </div>
    <div class=" card-body text-center">
        <div class=" col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="FechaEvento" class="form-control" placeholder="Fecha Evento">
                    <span asp-validation-for="FechaEvento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Lugar" class="form-control" placeholder="Lugar del evento">
                    <span asp-validation-for="Lugar" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Precio" class="form-control" placeholder="Precio">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Estado" class="form-control" placeholder="Estado">
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class=" card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>